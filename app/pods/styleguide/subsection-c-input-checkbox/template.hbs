      {{/freestyle-usage}}
    {{/freestyle-variant}}

    {{#freestyle-variant collection=collection key='warning'}}
      {{#freestyle-usage 'c-input-checkbox-warning' title='warning' usageTitle=labels.usage.title}}
        {{c-input-checkbox
          items=model.selectOptions
