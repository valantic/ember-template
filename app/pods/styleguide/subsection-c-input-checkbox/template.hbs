      {{/freestyle-usage}}
    {{/freestyle-variant}}

  {{/freestyle-collection}}



  {{#freestyle-collection title='c-input-checkbox specials' defaultKey='all' inline=false as |collection|}}

    {{#freestyle-variant collection=collection key='labelfirst'}}
