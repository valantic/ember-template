    {{/freestyle-variant}}

    {{#freestyle-variant collection=collection key='error'}}
      {{#freestyle-usage 'c-input-checkbox-error' title='error' usageTitle=labels.usage.title}}
        {{c-input-checkbox
          items=model.selectOptions
