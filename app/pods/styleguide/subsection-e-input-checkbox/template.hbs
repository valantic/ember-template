{{! disable all rules for this template }}
<!-- template-lint disable=true -->
{{#freestyle-subsection name='e-input-checkbox' section=section}}
  <div class="FreestyleAnnotation">
    <p>Checkboxen sind hier nur sichtbar, die Funktionalit√§t erreichen sie erst als Komponente sh.</p>
    <a href="styleguide?c=false&l=false&n=false&s=Components&ss=c-input-checkbox">c-input-checkbox</a>
  </div>
  {{#freestyle-annotation}}
    <p>Extends: <em>e-input</em></p>
  {{/freestyle-annotation}}

  {{#freestyle-usage 'e-input-checkbox' title='Default' usageTitle=labels.usage.title jsTitle=labels.usage.js}}
    {{e-input-checkbox
        id="theCheckBox1"
        name="checkbox1"
    }}
  {{/freestyle-usage}}
  {{#freestyle-usage 'e-input-checkbox-checked' title='Default checked' usageTitle=labels.usage.title}}
    {{e-input-checkbox
        checked=true
        name="checkbox1"
    }}
  {{/freestyle-usage}}
  {{#freestyle-usage 'e-input-checkbox-classname' title='Default with class name' usageTitle=labels.usage.title}}
    {{e-input-checkbox
        class="e-input-checkbox e-input-checkbox--modifier"
        name="checkbox1"
    }}
  {{/freestyle-usage}}

  {{#freestyle-collection title='e-input-checkbox states' defaultKey='all' inline=false as |collection|}}

    {{#freestyle-variant collection=collection key='default'}}
      {{#freestyle-usage 'e-input-checkbox-default' title='e-input-checkbox default' usageTitle=labels.usage.title}}
        {{e-input-checkbox
            name="checkbox1"
        }}
      {{/freestyle-usage}}
    {{/freestyle-variant}}

    {{#freestyle-variant collection=collection key='success'}}
      {{#freestyle-usage 'e-input-checkbox-success' title='e-input-checkbox success' usageTitle=labels.usage.title}}
        {{e-input-checkbox
            state="success"
        }}
      {{/freestyle-usage}}
    {{/freestyle-variant}}

    {{#freestyle-variant collection=collection key='warning'}}
      {{#freestyle-usage 'e-input-checkbox-warning' title='e-input-checkbox warning' usageTitle=labels.usage.title}}
        {{e-input-checkbox
            state="warning"
        }}
      {{/freestyle-usage}}
    {{/freestyle-variant}}

    {{#freestyle-variant collection=collection key='error'}}
      {{#freestyle-usage 'e-input-checkbox-error' title='e-input-checkbox error' usageTitle=labels.usage.title}}
        {{e-input-checkbox
            state="error"
        }}
      {{/freestyle-usage}}
    {{/freestyle-variant}}

  {{/freestyle-collection}}

{{/freestyle-subsection}}