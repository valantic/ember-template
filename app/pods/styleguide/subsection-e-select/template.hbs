{{#section.subsection name='e-select'}}

  {{#freestyle-annotation}}
    <p>Extends: <em>eFormComponents</em></p>
    <h4>Attributes</h4>
    <dl>
      <dt><code>disabled</code> (Boolean)</dt>
      <dd>sets disabled attribute to element</dd>
      <dt><code>required</code> (Boolean)</dt>
      <dd>sets required attribute to element</dd>
      <dt><code>readonly</code> (Boolean)</dt>
      <dd>sets readonly attribute to element</dd>
      <dt><code>id</code> (String)</dt>
      <dd>id attribute of select element</dd>
      <dt><code>name</code> (String)</dt>
      <dd>name attribute of select element</dd>
      <dt><code>title</code> (String)</dt>
      <dd>title attribute of select element</dd>
      <dt><code>multiple</code> (Boolean)</dt>
      <dd>allows multiple selection</dd>
      <dt><code>size</code> (Number)</dt>
      <dd>Number how many option it should show (only multiple)</dd>
      <dt><code>items</code> (Array)</dt>
      <dd>Array with select options</dd>
      <dt><code>groupValue</code> (String)</dt>
      <dd>value will be compared with the option-value, when it's the same it will select this value</dd>
    </dl>
  {{/freestyle-annotation}}

  {{#freestyle-collection title='e-select types' defaultKey='all' inline=false as |collection|}}

    {{#collection.variant key='single-select'}}
      {{#freestyle-usage 'e-select-single' title='single' usageTitle=labels.usage.title}}
        {{e-select
          label="Select"
          name="e-select"
          items=model.selectOptions
          dataTextField="label"
          dataValueField="value"
        }}
      {{/freestyle-usage}}
    {{/collection.variant}}

    {{#collection.variant key='multiple-select'}}
      {{#freestyle-usage 'e-select-multiple' title='multiple' usageTitle=labels.usage.title}}
        {{e-select
          label="Select"
          name="e-select-multiple"
          items=model.selectOptions
          multiple=true
          dataTextField="label"
          dataValueField="value"
        }}
      {{/freestyle-usage}}
    {{/collection.variant}}

  {{/freestyle-collection}}



