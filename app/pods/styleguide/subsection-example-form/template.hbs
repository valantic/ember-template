{{#freestyle-subsection name='example-form' section=section}}

  {{#freestyle-annotation}}
    <p>This form is an example including most of the standard-form-components</p>
  {{/freestyle-annotation}}
  <div class="row">
    <div class="col-xxs-12 col-sm-8 col-sm-offset-2">
      <form {{action "sendForm" on="submit"}}>
        {{#e-panel title="Basic form" headingIncluded=true}}
          <div class="row">
            <div class="col-xxs-12 col-xs-6 spacing--bottom-15">
              {{c-input-text
                  label="Firstname"
                  placeholder="your firstname"
                  layout="horizontal"
              }}
            </div>
            <div class="col-xxs-12 col-xs-6 spacing--bottom-15">
              {{c-input-text
                  label="Lastname"
                  placeholder="your lastname"
                  layout="horizontal"
              }}
            </div>
          </div>
          <div class="row">
            <div class="col-xxs-12 spacing--bottom-15">
              {{c-input-text
                  label="E-Mail"
                  placeholder="your e-mail address"
                  layout="nested"
                  type="email"
              }}
            </div>
          </div>
          <div class="row">
            <div class="col-xxs-12 spacing--bottom-15">
              {{c-textarea
                  label="Message"
                  placeholder="your message"
                  layout="vertical"
                  rows=10
              }}
            </div>
          </div>
          <div class="row">
            <div class="col-xxs-12 spacing--bottom-15">
              {{c-select
                label="Choose option"
                layout="vertical"
                items=model.selectOptions
              }}
            </div>
          </div>
          <div class="row">
            <div class="col-xxs-12 col-xs-6 spacing--bottom-15">
              {{c-input-radio
                label="Choose option"
                layout="vertical"
                items=model.selectOptions
              }}
            </div>
            <div class="col-xxs-12 col-xs-6 spacing--bottom-15">
              {{c-input-checkbox
                label="Select options"
                layout="vertical"
                items=model.selectOptions
              }}
            </div>
          </div>
          <div class="row">
            <div class="col-xxs-12">
              {{#e-button}}
                Send message
              {{/e-button}}
            </div>
          </div>
        {{/e-panel}}
      </form>
    </div>
  </div>

{{/freestyle-subsection}}